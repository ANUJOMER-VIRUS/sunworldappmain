<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:id="@+id/redeemRL"
    android:elevation="5dp"
    android:layout_margin="2dp"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llri"
                android:layout_width="match_parent"
                android:layout_height="25sp"
android:layout_margin="2dp"
                android:layout_alignParentTop="true"
android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/redeemname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="Sunworld Water Tank "
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
              android:textSize="18sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ccri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llri"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:gravity="center_horizontal"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/redeemimage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/logosunworld" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@id/ccri"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins:- "
            android:textColor="@color/black"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/redeemcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:src="@drawable/coins" />

    </LinearLayout>
</RelativeLayout>

        </RelativeLayout>
</androidx.cardview.widget.CardView>
    </RelativeLayout>

